{% extends "base.html.twig" %}

{% block title %}{{ tag.title }}{% endblock %}

{% block body %}
    <div class="col-8 main-content">
        <h2 class="main-heading">{{ tag.title }}</h2>
        <div class="row listing">
        {% for article in latest_list %}
            <div class="column half">
                <article class="highlights post type-post status-publish format-standard has-post-thumbnail" itemscope="" itemtype="http://schema.org/Article">
                {% if article.categories %}<span class="cat-title cat-1"><a href="{{ path('category_url', {slug: article.categories[0].slug}) }}">{{ article.categories[0].title }}</a></span>{% endif %}
                    <a href="{{ path('article_url', {'slug': article.slug}) }}" title="{{ article.excerpt }}" class="image-link">
                        <img src="{{ article.image }}" class="image wp-post-image no-display appear" alt="{{ article.title }}" title="{{ article.title }}" itemprop="image" width="351" height="185">
                    </a>

                    <div class="meta">
                        <span class="leftside views">{{ article.views|pnum }} بازدید</span>
                        <time datetime="{{ article.createdAt|date('Y-m-d') }}" title="{{ article.createdAt|jdate('l d F Y') }}" itemprop="datePublished">{{ article.createdAt|jdate('l d F Y') }}</time>
                    </div>

                    <h2 itemprop="name"><a href="{{ path('article_url', {'slug': article.slug}) }}" title="{{ article.excerpt }}" itemprop="url">{{ article.title }}</a></h2>
                    <div class="excerpt">
                        <p>{{ article.excerpt }}</p>
                    </div>
                </article>
            </div>
        {% endfor %}
        </div>
        <div class="row listing">
            <div class="col-12">
                {% if pagination.max > 1 %}
                    <ul class="main-pagination">

                        {% if pagination.current > 1 %}
                        <li>
                            <a class="page-numbers" href="{{ path('tag_url', {slug: tag.slug, page: pagination.current-1}) }}">«</a>
                        </li>
                        {% endif %}

                        {% if pagination.current > 3 %}
                        <li>
                            <a class="page-numbers" href="{{ path('tag_url', {slug: tag.slug, page: 1}) }}">{{ 1|pnum }}</a>
                        </li>
                        <li class="page-numbers dots">...</li>
                        {% endif %}

                        {% for i in pagination.start..pagination.end %}
                            <li>
                                <a class="page-numbers{{ pagination.current == i ? ' current' }}" href="{{ path('tag_url', {slug: tag.slug, page: i}) }}">{{ i|pnum }}</a>
                            </li>
                        {% endfor %}

                        {% if pagination.current < pagination.max - 2 %}
                            <li class="page-numbers dots">...</li>
                            <li>
                                <a class="page-numbers" href="{{ path('tag_url', {slug: tag.slug, page: pagination.max}) }}">{{ pagination.max|pnum }}</a>
                            </li>
                        {% endif %}

                        {% if pagination.current < pagination.max %}
                        <li>
                            <a class="page-numbers" href="{{ path('tag_url', {slug: tag.slug, page: pagination.current+1}) }}">»</a>
                        </li>
                        {% endif %}

                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
    <aside class="col-4 sidebar">
        <h3 class="widgettitle">جدیدترین مطالب</h3>
        <ul class="block posts-list thumb">
            {% for article in latest_with_image %}
                <li>
                    <span class="leftside views">{{ article.views|pnum }} بازدید</span>
                    <a href="{{ path('article_url', {'slug': article.slug}) }}" title="{{ article.excerpt }}"><img width="75" height="75" src="{{ article.image }}" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="{{ article.title }}" title="{{ article.title }}" /></a>
                    <div class="content">
                        <time datetime="{{ article.createdAt|date('Y-m-d') }}" title="{{ article.createdAt|jdate('l d F Y') }}" itemprop="datePublished">{{ article.createdAt|jdate('l d F Y') }}</time>
                        <a href="{{ path('article_url', {'slug': article.slug}) }}" title="{{ article.excerpt }}">{{ article.title }}</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </aside>
{% endblock %}